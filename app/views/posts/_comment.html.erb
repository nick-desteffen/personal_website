<div class="comment">
  <%= gravatar_image(comment.gravatar_hash, :alt => comment.name, :title => comment.name) %>
  <% if comment.url %>
    <div class="name"><%= link_to comment.name, comment.url, :target => "_blank" %> says:</div>
  <% else %>
    <div class="name"><%= comment.name %> says:</div>
  <% end %>
  <div class="commented_at"><%= format_timestamp(comment.created_at) %></div>
  <p><%= comment.body %></p>
</div>