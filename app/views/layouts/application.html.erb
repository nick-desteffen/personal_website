<!DOCTYPE html>
  <html>
  <%= render :partial => "shared/head" %>
  <body>
    <div id="header">
      <div id="title">
        <%= link_to root_url, :class => "headline" do %>
          <h1>Nick DeSteffen</h1>
          <h2>Chicago Developer</h2>
        <% end %>
      </div>
      <div id="navigation">
        <ul>
          <li><%= navigation_link("Blog", root_path, :blog) %></li>
          <li><%= navigation_link("About", about_path, :home) %></li>
          <li><%= navigation_link("Resume", resume_download_path, :resume) %></li>
          <li><%= navigation_link("Contact", contact_path, :contact) %></li>
        </ul>
      </div>
    </div>
    <div class="clear"></div>
    <div id="container">
      <%= flash_messages %>
      <div id="main">
        <div class="left-col">
          <%= yield %>
        </div>
        <div class="right-col">
          <% if current_user %>
            <div class="logged_in">
              Currently logged in as: <%= current_user.full_name %> (<%= link_to "Logout", destroy_session_path, :method => :delete %>)
            </div>
          <% end %>
          <%= render partial: "shared/social_media" %>
          <%= content_for :sidebar %>
        </div>
      </div>
    </div>
    <%= render partial: "shared/tail" %>
  </body>
</html>
