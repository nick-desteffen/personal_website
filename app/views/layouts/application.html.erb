<!DOCTYPE html>
  <html>
  <%= render :partial => "shared/head" %>
  <body>
    <div id="header">
      <div id="title">
        <h1>Nick DeSteffen</h1>
      </div>
      <div id="navigation">
        <ul>
          <li><%= link_to "Blog", root_path, :class => navigation_class(:blog) %></li>
          <li><%= link_to "About", about_path, :class => navigation_class(:home) %></li>
          <li><%= link_to "Resume", resume_download_path, :class => navigation_class(:resume) %></li>
          <li><%= link_to "Contact", contact_path, :class => navigation_class(:contact) %></li>
        </ul>
      </div>
    </div>
    <div class="clear"></div>
    <div id="container">
      <%= render :partial => "shared/flash_messages" %>
      <div id="main">
        <div class="left-col">
          <%= yield %>
        </div>
        <div class="right-col">
          <% if current_user %>
            <div class="logged_in">
              Currently logged in as: <%= current_user.full_name %> (<%= link_to "Logout", destroy_session_path, :method => :delete %>)
            </div>
          <% end %>
          <%= content_for :sidebar %>
        </div>
      </div>
      <div id="footer">
        <div class="hr"></div>
        <p>Copyright &copy; <%= Time.now.year %> | Nick DeSteffen</p>
      </div>
    </div>
  </body>
</html>
